<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="padula.delaiglesia.dam.isi.frsf.reclamosonlinelab04_api22_mapa.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reclamos!" />
    <ListView
        android:id="@+id/mainListaReclamos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnNuevoReclamo"
            android:text="Nuevo Reclamo!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnVerReclamos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visualizar en Mapa"
            android:layout_weight="0.30" />
    </LinearLayout>


</LinearLayout>
